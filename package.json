{
  "name": "create-vdc-with-edge-portal-api-demo",
  "version": "1.0.0",
  "description": "Demo of creating a vdc and edge using the UKCloud Portal API",
  "private": true,
  "module": "main.js",
  "scripts": {
    "generate-api": "openapi-generator generate -i docs/portal-api/openapi.json -g typescript-axios -o generated/portal-api -c generated/portal-api-options.json",
    "tsc": "tsc",
    "test": "jest",
    "prettier:write": "prettier --write *.ts *.json *.md src/**.ts *.js dist/index.html docs/*/*.json */*.json",
    "build": "webpack --mode production",
    "devbuild": "webpack --mode development --watch",
    "serve": "nginx -c ./nginx.conf -g 'daemon off;' -p \"$(pwd)\"",
    "serve:podman": "podman container run --rm -p 8000:8000 -v ./dist:/etc/nginx/dist:ro,Z -v ./nginx.conf:/etc/nginx/nginx.conf:ro,Z nginx:1.17-alpine",
    "serve:docker": "docker container run --rm -p 8000:8000 -v ./dist:/etc/nginx/dist:ro -v ./nginx.conf:/etc/nginx/nginx.conf:ro nginx:1.17-alpine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccouzens/create-vdc-with-edge-portal-api-demo.git"
  },
  "author": "Chris Couzens",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ccouzens/create-vdc-with-edge-portal-api-demo/issues"
  },
  "homepage": "https://github.com/ccouzens/create-vdc-with-edge-portal-api-demo#readme",
  "dependencies": {
    "@ccouzens/ukcloud-portal-api": "file:generated/portal-api/"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^1.0.7-4.2.1",
    "@types/node": "^12.12.14",
    "@vcd/bindings": "^9.1.1",
    "prettier": "^1.19.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
